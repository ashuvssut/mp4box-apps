{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    /* Output Options */
    "outDir": "./dist",
    "declaration": true,
    "emitDeclarationOnly": false,
    /* If your code runs in the DOM: */
    "lib": ["es2022", "dom", "dom.iterable"],
  },
  "include": ["src"],
  "exclude": ["dist"]
}
